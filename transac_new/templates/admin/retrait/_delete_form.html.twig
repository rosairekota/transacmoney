<form method="post" action="{{ path('retrait_delete', {'id': retrait.id,'user_email':app.user.email}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ retrait.id) }}">
    <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
</form>
