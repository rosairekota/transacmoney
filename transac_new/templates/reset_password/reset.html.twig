{% extends 'security/login.html.twig' %}

{% block title %}Renitialiser votre mot de passe
{% endblock %}
{% block bodyclass %}class="login"
{% endblock %}
{% block body %}
	<div class="login_wrapper">
		<div class="animate form login_form">
			<section class="login_content">
				<h1>Renitialiser votre mot de passe</h1>
				{{ form_start(resetForm) }}
				{{ form_row(resetForm.plainPassword) }}
				<button class="btn btn-primary">Renitialiser</button>
				{{ form_end(resetForm) }}
			</section>
		</div>
	</div>
{% endblock %}
