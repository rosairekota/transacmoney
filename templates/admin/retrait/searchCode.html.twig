{% extends "admin/bars.html.twig" %}

{% block contenpage %}
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.3.1/css/all.min.css" rel="stylesheet">
<div class="body bg-default">
  <div class="main-content">

    <div class="mt-4 mx-3">
      <div class="x_panel">
        <div class="card card-stats mb-4 mb-xl-0">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <h4 class="card-title mb-0 font-weight-light text-center" style="color:#124e8a;">Vérification du Code</h4>
              </div>
              <div class="col-sm-8 offset-sm-4">
                <div class=" row">
                  {% for label, messages in app.flashes(['danger', 'info','success']) %}
                  {% for message in messages %}
                  
                    <div class="col-sm-6 alert alert-{{ label }} alert-dismissible " role="alert"> {{ message }}
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
                      </button>
                    </div>

                  {% endfor %}

                  {% endfor %}
                </div>
              </div>
              <div class="col-sm-6 offset-sm-3 mt-5 mb-0 text-muted text-sm text-center text-white">

                {{ form_start(form,{'action':path('retrait_search')}) }}
                {{ form_row(form.code_secret,{'label':false,'attr':{'class':'mb-3 form-control rounded-6'}}) }}

                <button class="btn btn-danger btn-danger btn-lg text-white" type="submit">Verifier</button>
                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Page content -->
  </div>
</div>


{% endblock %}