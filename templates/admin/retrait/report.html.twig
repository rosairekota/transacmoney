<style type="text/css">
    table {
        width: 100%;
        color: #717375;
        font-family: helvetica;
        line-height: 5mm;
        border-collapse: collapse;
        padding: 2rem;
    }

    h1,
    h2 {
        margin-bottom: 2rem;
        font-size: 12px;

    }

    p {
        margin: 5px;
    }

    tr {
        width: 100%;
    }

    th {
        border: 1px solid #000;
        color: white;
        background: rgb(108, 112, 129);
        padding: 5px;
        font-weight: normal;
        font-size: 14px;
        text-align: center;
    }

    td {
        border: 1px solid #CFD1D2;
        padding: 5px 40px;
        text-align: center;
    }

    .no-border {
        border-right: 1px solid #CFD1D2;
        border-left: none;
        border-top: none;
        border-bottom: none;
    }


    .f10p {
        width: 10%;
    }

    .f15p {
        width: 15%;
    }

    .f25p {
        width: 25%;
    }

    .f50p {
        width: 50%;
    }

    .f60p {
        width: 60%;
    }

    .f75p {
        width: 75%;
    }

    .signClient {
        margin-left: 25mm;
        color: rgb(34, 33, 33);
    }

    .signeClient {
        margin-left: 55mm;
        color: rgb(80, 76, 76) !important;
        margin-top: 2mm;
    }

    .signeAgent {
        color: rgb(80, 76, 76) !important;
        margin-top: 2mm;
        margin-left: 5mm;
    }

    .title {
        text-align: center;
        font-size: 14px;
        color: rgb(12, 47, 100);
        margin-bottom: 0mm;
    }
</style>

<page backtop="0mm" backleft="10mm" backright="10mm" backbottom="10mm">

    <page_footer>
        <hr />
        <p style="text-align:center;color:blue;">https://transacmoney.com/</p>
    </page_footer>
    <div>

        <h1 class="title"><span>Transacmoney</span>
        </h1>
        <h2><span>Agence: </span> <span style="color:#3d3e3f">{{depot.user_depot.agence.name|upper}}</span> <br>
            <span>Adresse:</span><span style="color:#303131">{{depot.user_depot.agence.description}}</span> <br>
        </h2>


    </div>

    <table>
        <thead>
            <tr>
                <th colspan="3">code #{{depot.codeDepot}}</th>
                <th>Transferé le,{{depot.dateDepot|date("m/d/Y,h:i")}}</th>
            </tr>
            <tr>
                <td colspan="2"> <strong>Expediteur:</strong><br> {{depot.expediteur.prenom}}
                    {{depot.expediteur.nom}}.<br> Tél:{{depot.expediteur.telephone}}.<br>Ville
                    :{{depot.user_depot.agence.city.name}}
                </td>
                <td colspan="2"> <strong>Bénéficiaire:</strong><br>
                    {{depot.beneficiaire.prenom}}-{{depot.beneficiaire.nom}}<br>
                    Tél:{{depot.beneficiaire.telephone}}.<br>
                    Ville:{{depot.ville.name}} </td>
            </tr>
        </thead>
        <tbody>
            <tr rowspan="2">
                <th colspan="3">Nom/ Description</th>
                <th>Montant.</th>
            </tr>
            <tr>
                <td colspan="3">Retrait </td>
                <td>{{depot.montant}} USD</td>
            </tr>

        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total</th>
                <td> {{depot.montant}} USD</td>
            </tr>

        </tfoot>
    </table>
    <p style="text-align:right;">Fait a {{depot.user_depot.agence.city.name}}, le
        {{ "now"|date("m/d/Y") }}
    </p>
    <h2><span>Nom et Signature du Bénéficiaire</span> <span class="signClient">Nom et Signature de l'Agent</span>
        <br>
        <span class="signeAgent"> {{depot.beneficiaire.prenom}}- {{depot.beneficiaire.nom}}</span> <span
            class="signeClient">{{app.user.nomComplet}}</span> <br>
    </h2>


</page>