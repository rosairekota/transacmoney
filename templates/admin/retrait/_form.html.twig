<div class="container">
    <div class="page-title">
        <div class="title_left">
            <h5><a href="{{ path('retrait_index',{'user_email':app.user.email}) }}">Voir la {{
                    "backend.retrait.retrait_listing"|trans }}</a></h5>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-sm-12">
            <div class=" row">
                {% for label, messages in app.flashes(['danger', 'info','success']) %}
                {% for message in messages %}

                <div class="col-sm-6 alert alert-{{ label }}"> {{ message }} </div>

                {% endfor %}

                {% endfor %}
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Effectuer un Retrait</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-sm-4">
                                {{
                                form_row(form.montantRetire,{'label':'Montant
                                Ã  Retirer','attr':{'value':app.session.get('depotSession').depot.0.montant}})
                                }}
                            </div>
                            <div class="col-sm-4">
                                {{
                                form_row(form.code_retrait,{'attr':{'value':app.session.get('depotSession').depot.0.codeDepot}})
                                }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(form.beneficiaire_piece_numero,{'required':false}) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(form.beneficiaire_piece_type,{'required':false}) }}
                            </div>
                            <div class="col-sm-8">
                                {{ form_row(form.libelle,{'label':'Description ou Commentaire'}) }}
                            </div>
                            </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a class="btn btn-warning" href="{{ path('app_admin_index') }}">{{
                                "backend.user.cancel"|trans }}</a>
                            <button type="submit" name="valider" class="btn btn-success">{{
                                button_label|default('Enregistrer') }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>