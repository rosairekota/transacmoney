{% extends 'base.html.twig' %}

{% block title %}Debit index{% endblock %}

{% block body %}
    <h1>Debit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Debit_code</th>
                <th>Request_date</th>
                <th>Status</th>
                <th>Debit_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for debit in debits %}
            <tr>
                <td>{{ debit.id }}</td>
                <td>{{ debit.amount }}</td>
                <td>{{ debit.debitCode }}</td>
                <td>{{ debit.requestDate ? debit.requestDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ debit.status ? 'Yes' : 'No' }}</td>
                <td>{{ debit.debitDate ? debit.debitDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('debit_show', {'id': debit.id}) }}">show</a>
                    <a href="{{ path('debit_edit', {'id': debit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('debit_new') }}">Create new</a>
{% endblock %}
