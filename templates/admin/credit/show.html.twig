{% extends 'base.html.twig' %}

{% block title %}Credit{% endblock %}

{% block body %}
    <h1>Credit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ credit.id }}</td>
            </tr>
            <tr>
                <th>Credit_amount</th>
                <td>{{ credit.creditAmount }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ credit.createdAt ? credit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Credit_code</th>
                <td>{{ credit.creditCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ credit.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('credit_index') }}">back to list</a>

    <a href="{{ path('credit_edit', {'id': credit.id}) }}">edit</a>

