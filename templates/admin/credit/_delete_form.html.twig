<form method="post" action="{{ path('credit_delete', {'id': credit.id}) }}" id="form">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credit.id) }}">
    <button class="btn btn-danger disable-btn del-link"><i class="fa fa-trash"></i></button>
</form>
<script>
    const form = document.querySelector('#form');
    form.addEventListener('submit', (e) => {
        confirm("Are you sure you want to delete this item?");
    })
</script>