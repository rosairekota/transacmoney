<div class="container">
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ "backend.menu.agence"|trans }}</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(form) }}
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4">
                                {{ form_row(form.credit_amount) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(form.account) }}
                            </div>
                            <div class="col-sm-12">
                                <div class="item form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <a class="btn btn-warning" href="{{ path('app_admin_index') }}">{{
                                            "backend.user.cancel"|trans }}</a>
                                        <button type="submit" name="valider" class="btn btn-success">{{
                                            button_label|default('Enregistrer') }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>