{% extends 'admin/bars.html.twig' %}

{% block contenpage %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h5><a href="{{ path('app_admin_users') }}">{{ "backend.user.user_listing"|trans }}</a> >> {{
                "backend.menu.agence"|trans }} </h5>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Cr√©er une nouvelle{{ "backend.menu.agence"|trans }}</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(userForm) }}
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4">
                                {{ form_row(userForm.username) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(userForm.nomComplet) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(userForm.email) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4">
                                {{ form_row(userForm.justpassword) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(userForm.role) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(userForm.agence.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4">
                                {{ form_row(userForm.agence.description) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(userForm.agence.city) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(userForm.agence.compte) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a class="btn btn-warning" href="{{ path('app_admin_users') }}">{{
                                    "backend.user.cancel"|trans }}</a>
                                <button type="submit" name="valider" class="btn btn-success">{{
                                    "backend.user.register"|trans }}</button>
                            </div>

                        </div>
                    </div>
                    {{ form_end(userForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}